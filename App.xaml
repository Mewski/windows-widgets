<Application x:Class="WindowsWidgets.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mica="clr-namespace:MicaWPF.Styles;assembly=MicaWPF"
             StartupUri="Windows\SettingsWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="WidgetBackground" Color="#202020"/>
            <SolidColorBrush x:Key="WidgetContent" Color="#808080"/>
            <SolidColorBrush x:Key="WidgetText" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="WidgetSubtext" Color="#BCBCBC"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
